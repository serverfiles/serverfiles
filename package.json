{
    "name": "serverfiles",
    "description": "Dynamically write config files to multiple Linux servers.",
    "version": "0.0.0",
    "license": "UNLICENSED",
    "bin": "src/serverfiles.js",
    "type": "module",
    "homepage": "https://github.com/serverfiles/serverfiles#readme",
    "bugs": "https://github.com/serverfiles/serverfiles/issues",
    "author": {
        "name": "Vasanth Developer",
        "email": "vasanth@vasanthdeveloper.com",
        "url": "https://vasanth.tech"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/serverfiles/serverfiles.git"
    },
    "scripts": {
        "clean": "rm -rf bin build",
        "transpile": "esbuild --platform=node --bundle --outfile=build/serverfiles.js src/serverfiles.js",
        "compile": "pkg --no-bytecode --public --targets latest-linux-x64,latest-macos-x64 --public-packages '*' --compress brotli --out-path bin build/serverfiles.js",
        "compile:clean": "rm -rf build",
        "build": "run-s clean transpile compile compile:clean"
    },
    "keywords": [],
    "dependencies": {
        "@vasanthdeveloper/utilities": "^0.1.0",
        "commander": "^8.0.0",
        "deepmerge": "^4.2.2",
        "esm": "^3.2.25",
        "execa": "^5.1.1",
        "glob": "^7.1.7",
        "joi": "^17.4.1",
        "js-yaml": "^4.1.0",
        "mkdirp": "^1.0.4",
        "systeminformation": "^5.7.7"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/eslint-parser": "^7.14.7",
        "@babel/plugin-syntax-top-level-await": "^7.14.5",
        "@types/js-yaml": "^4.0.2",
        "esbuild": "*",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "npm-run-all": "*",
        "pkg": "*",
        "prettier": "^2.3.2"
    }
}